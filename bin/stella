#!/usr/bin/env ruby 


# All command-line tasks are fulfilled via this script which
# is a basic implementation of Stella::CLI. Except on Windows
# which uses stella.bat by default. 
# 
# See:
# <tt>$ stella -h</tt>
#

#
#
STELLA_HOME = File.expand_path(File.join(File.dirname(__FILE__), '..'))
$:.unshift(File.join(STELLA_HOME, 'lib')) # Make sure our local lib is first in line

require 'stella'
require 'stella/cli'

app = Stella::CLI.new(ARGV, STDIN)
app.run

