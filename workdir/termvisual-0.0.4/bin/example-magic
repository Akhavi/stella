#!/usr/bin/ruby
$: << File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))

# Escape Sequences: http://www.termsys.demon.co.uk/vtansi.htm

require 'rubygems'
require 'term/magic'

term = Term::Magic.new
term.cursor.setg0("USASCII")


pos = term.cursor.getpos()

exit;
sleep 1
;
term.cursor.setpos(10,0)
sleep 1
term.cursor.setpos(10,10)
sleep 1
print "\x1b"
STDOUT.flush
sleep 1
print "#{pos}"
STDOUT.flush
sleep 1
print "\x1b[#{pos}"
STDOUT.flush
sleep 1

#term.cursor.restoreattr
#term.device.reset

__END__
term.cursor.saveattr

term.cursor.setg0("USASCII")
term.cursor.setg1("SPECIAL")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "lqqqqqu"
term.cursor.useg0
print " Main Form "
term.cursor.useg1
print "tqqqqhamnshsguyt76qqk\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "x                        x\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "x                        x\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "x     "
term.cursor.useg0
print "Hello World!"
term.cursor.useg1
print "       x\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "x                        x\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"black")
term.cursor.useg1
print "x           sssss             x\n"
term.cursor.useg0
term.font.set("")

term.font.set("bg"=>"magenta")
term.cursor.useg1
print "mqqqqqqqqqqqqqqqqqqqqqqqqj"
term.cursor.useg0
term.font.set("")

STDOUT.flush

sleep 1

term.cursor.restoreattr

#term.device.reset
